.side
  .side__header
    .side__header--items
      %p.side__header--items--name
        = current_user.name
      %ul.side__header--items--icon
        %li.side__header--items--icon--pen
          =link_to new_group_path do
            = icon("far", "edit")
        %li.side__header--items--icon--gear
          = link_to edit_user_path(current_user) do
            = icon("fas", "cog")
  .side__groups
    - current_user.groups.each do |group|
      .side__groups--group
        .group
          = link_to group_messages_path(group) do 
            .group.name
              = group.name
            %p.group__message
              = group.show_last_message
    
